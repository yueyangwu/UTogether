extends layout

include _includes/sharedHTMLfunctions

block content
    .page-header
    .row
        .col-xs-12.col-sm-3
            .panel-body.panel.panel-default
                img(src='/images/Miranda.png')
                p Miranda Poggidi
                p 22
                p USA
                .label.label-primary
                    | Boardgames
                | &nbsp;
                .label.label-primary
                    | Eurogames
                | &nbsp;
                .label.label-primary
                    | Spanish
                | &nbsp;
                .label.label-primary
                    | Film
                | &nbsp;
                .label.label-primary
                    | Chinese
                | &nbsp;
                p Looking forward to making friends with people from different countries and having fun together
        .col-sm-1
        .col-xs-12.col-sm-7
            .panel-body.panel.panel-default
                img(src='/images/halloween.jpg')
                h4 #{event.title}
                p
                    .glyphicon.glyphicon-time
                    | &nbsp; #{event.date}
                    | #{event.time}
                p
                    .glyphicon.glyphicon-user
                    | &nbsp; No Limit
                p
                    .glyphicon.glyphicon-map-marker
                    | &nbsp; #{event.location}
                p #{event.description}
                p.text-center
                    button(type='button').btn.btn-default
                        | Join
                a(href='#')
                    | 18 people are going
                span.pull-right
                    a(href='#')
                        | Share
            .panel-body.panel.panel-default.review-panel
                .panel-heading
                    a.btn.btn-default.pull-right(href="/events/#{event._id}/comment/new") Add review
                    h2.panel-title Comments
                .panel-body.review-container
                    each comment in event.comments
                        .row
                            .review
                                .well.well-sm.review-header
                                    span.review #{comment.author}&nbsp;&nbsp;&nbsp;
                                    small
                                        +formatDate(comment.createdOn)
                                .col-xs-12
                                    p !{(comment.commentText).replace(/\n/g, '<br/>')}