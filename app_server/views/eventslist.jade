extends layout

block content
    .page-header
        .row
            .col-sm-4.col-sm-offset-8
                .input-group
                    input(type='text',placeholder='Search').form-control
                    span.input-group-btn
                        button.btn.btn-default(type='button') Search
    .row
        .col-xs-12.col-sm-4.list-group
            a(href='#').list-group-item Culture Exchange
                span.badge.pull-right.badge-default 3
            a(href='#').list-group-item Belief
                span.badge.pull-right.badge-default 5
            a(href='#').list-group-item Study
                span.badge.pull-right.badge-default 16
            a(href='#').list-group-item Sports
                span.badge.pull-right.badge-default 3
            a(href='#').list-group-item Outdoor & Adventure
                span.badge.pull-right.badge-default 9
            a(href='#').list-group-item Tech
                span.badge.pull-right.badge-default 12
            a(href='#').list-group-item Games
                span.badge.pull-right.badge-default 6
            a(href='#').list-group-item Food & Drink
                span.badge.pull-right.badge-default 29
            a(href='#').list-group-item Arts
                span.badge.pull-right.badge-default 2
            a(href='#').list-group-item Others
                span.badge.pull-right.badge-default 1
        .col-sm-1
        .col-xs-12.col-sm-7.list-group
            .row
                each event in events
                    .col-xs-12.list-group-item
                        h4
                            a(href='/event')= event.title
                        span.pull-right= event.distance
                        p= event.date
                        p= event.time
                        p= event.location
                        p= event.joined
